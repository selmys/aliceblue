function doBisque() {
    nohup paplay sound/Lamp_on.ogg 2>/dev/null &
    paplay sound/Static.ogg 2>/dev/null &
    local foreground background
    foreground="#FFE4C4"
    background="#000000"
    setUnixColours "$foreground" "$background"
    for((i=0;i<22;i++))
