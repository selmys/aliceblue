function doAliceBlue() {
    nohup paplay sound/Lamp_On.ogg 2>/dev/null &
    nohup paplay sound/cx6.ogg 2>/dev/null &
#    setUnixColours "#000000" "#F0F8FF"
    setUnixColours "#F0F8FF" "#0000CD"
    echo -e '\033[7mIn the Shell                                                                    \033[0m'
#    setUnixColours2 "#000000" "#F0F8FF"
    setUnixColours2 "#F0F8FF" "#0000CD"
    echo
    echo "Everybody knows that narrative is an emergent property of conciousness, but the reverse is also true..."| fmt -w 80
    echo
    read -n1 -s -r
  nohup paplay sound/Lamp_On.ogg 2>/dev/null &
    sleep .5
    exit
}

