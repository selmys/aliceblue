# set up an alarm
function setAlarm() {
	while true
	do
		alarmTime=$(</dev/shm/aliceTimer)
		case $alarmTime in
            201) paplay sound/am1.ogg & ;; #flies
            1301) paplay sound/am1.ogg & ;;
            2401) paplay sound/am1.ogg & ;;
            540) paplay sound/am2.ogg & ;; #thunder
            2000) paplay sound/am2.ogg & ;;
            3990) paplay sound/am2.ogg & ;;
            150) paplay sound/am3.ogg & ;; #drops
            300) paplay sound/am3.ogg & ;;
            450) paplay sound/am3.ogg & ;;
            900) paplay sound/am3.ogg & ;;
            990) paplay sound/am3.ogg & ;;
            3000) paplay sound/am4.ogg & ;; #footsteps
            1001) paplay sound/am5.ogg & ;; #meat
            2200) paplay sound/am5.ogg & ;;
            3300) paplay sound/am5.ogg & ;;
            2990) paplay sound/am6.ogg & ;; #breathing
            4000) paplay sound/am7.ogg & ;; #fire
#		40) echo hello >/dev/null ;;
		esac
		sleep 1
	done
}

setAlarm &
alarmPID=$!

pp1="";pp2="";pp3="";pp4="";pp5=""

#initialize verbose display to on
verboseDisplay=1

# the initial display of the screen
display $currentRoom

# loop forever asking the user for a direction or a word and 
# display the updated screen
while true
do
    echo -ne "${green}[alice@blue]${off} "
	read direction
    if [[ "$direction" == "" ]]; then
        rows=$(tput lines)
	    tput cup $((rows-2)) 0 
        continue
    fi
	case $direction in
        es) endingsequence ;;
        brief) verboseDisplay=0 ;;
        verbose) verboseDisplay=1 ;;
		nowhere|n)    	previousRoom=$currentRoom; currentRoom=${table[$currentRoom,1]} ;;
		somewhere|s)  	previousRoom=$currentRoom; currentRoom=${table[$currentRoom,2]} ;;
		elsewhere|e) 	previousRoom=$currentRoom; currentRoom=${table[$currentRoom,3]} ;;
		wherever|w)   	previousRoom=$currentRoom; currentRoom=${table[$currentRoom,4]} ;;
		about)      gnome-terminal --hide-menubar --geometry 80x24-6-6 -- bash -c 'doAbout; bash' ;;
		hint)       gnome-terminal --hide-menubar --geometry 80x24-6-6 -- bash -c 'doHint; bash' ;;
		help)       gnome-terminal --hide-menubar --geometry 80x24-6-6 -- bash -c 'doHelp; bash' ;;
		credits)       gnome-terminal --hide-menubar --geometry 80x24-6-6 -- bash -c 'doCredits; bash' ;;
		save)       saveGame ;;
		restore)    restoreGame ;;
		restart)    restartGame ;;
		quit)       quitGame ;;
    #   exit)       quitGame ;; # not a good idea to use exit as 
								# it's a BASH command and may cause problems
        inventory|i)  gnome-terminal --hide-menubar --geometry 80x24-6-6 -- bash -c 'doInvent; bash' ;;
        east|west|north|south|northwest|northeast|southwest|southeast|ne|nw|se|sw|up|down)  gnome-terminal --hide-menubar --geometry 80x24-6-6 -- bash -c 'doThatway; bash' ;;
        exits)  gnome-terminal --hide-menubar --geometry 80x24-6-6 -- bash -c 'doExits; bash' ;;
 #old       wait|z) gnome-terminal --hide-menubar --geometry 80x24-6-6 -- bash -c 'doWait; bash' ;;
        wait|z) gnome-terminal --hide-menubar --geometry 80x24-6-6 -- bash -c 'doPhobia; bash' ;;
        look|l) gnome-terminal --hide-menubar --geometry 80x24-6-6 -- bash -c 'doLook; bash' ;;
        undo) gnome-terminal --hide-menubar --geometry 80x24-6-6 -- bash -c 'doUndo; bash' ;;
        smell) gnome-terminal --hide-menubar --geometry 80x24-6-6 -- bash -c 'doSmell; bash' ;;
        feel) gnome-terminal --hide-menubar --geometry 80x24-6-6 -- bash -c 'doFeel; bash' ;;
        taste) gnome-terminal --hide-menubar --geometry 80x24-6-6 -- bash -c 'doTaste; bash' ;;
        listen) gnome-terminal --hide-menubar --geometry 80x24-6-6 -- bash -c 'doListen; bash' ;;
        topics) gnome-terminal --hide-menubar --geometry 80x24-6-6 -- bash -c 'doTopics; bash' ;;
        weep|cry|wail) gnome-terminal --hide-menubar --geometry 80x24-6-6 -- bash -c 'doCry; bash' ;;
        sing|hope|pray) gnome-terminal --hide-menubar --geometry 80x24-6-6 -- bash -c 'doSing; bash' ;;
        run) gnome-terminal --hide-menubar --geometry 80x24-6-6 -- bash -c 'doCragne; bash' ;;
        xyzzy|XYZZY) gnome-terminal --hide-menubar --geometry 80x24-6-6 -- bash -c 'doXyzzy; bash' ;;
        fortune) gnome-terminal --hide-menubar --geometry 80x24-6-6 -- bash -c 'doFortune; bash' ;;
# conflicts, leave out        top) gnome-terminal --hide-menubar --geometry 80x24-6-6 -- bash -c 'doTop; bash' ;;
        whoami) gnome-terminal --hide-menubar --geometry 80x24-6-6 -- bash -c 'doWhoami; bash' ;;
        pwd) gnome-terminal --hide-menubar --geometry 80x24-6-6 -- bash -c 'doPwd; bash' ;;
        footnote|Footnote|footnote-1|Footnote-1|FOOTNOTE1|FOOTNOTE|FOOTNOTE-1|footnote1|Footnote1) gnome-terminal --hide-menubar --geometry 80x24-6-6 -- bash -c 'doFootnote1; bash' ;;
        scream|panic|despair) gnome-terminal --hide-menubar --geometry 80x24-6-6 -- bash -c 'doScream; bash' ;;
        Supercalifragilisticexpialidocious|supercalifragilisticexpialidocious) gnome-terminal --hide-menubar --geometry 80x24-6-6 -- bash -c 'doSuperC; bash' ;;
#        example) gnome-terminal --hide-menubar --geometry 80x24-6-6 -- bash -c 'doExample; bash' ;;

# Other common parser commands to consider implementing: again about map jump pray sleep curse undo 

        aliceblue|AliceBlue|Aliceblue|alice-blue|Alice-Blue|f0f8ff|F0F8FF) gnome-terminal --hide-menubar --geometry 80x24-6-6 -- bash -c 'doAliceBlue; bash' ;;
